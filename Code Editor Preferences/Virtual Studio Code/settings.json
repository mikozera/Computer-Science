{
  // Bracket-Colorizer
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "bracket-pair-colorizer-2.showVerticalScopeLine": false,

  // Code-Runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.fileDirectoryAsCwd": false,
  "code-runner.preserveFocus": false,
  "code-runner.runInTerminal": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.showExecutionMessage": true,

  // CSS
  "css.lint.emptyRules": "ignore",
  "css.validate": true,

  // Editor
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": false,
  "editor.fontSize": 15,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": true,
  "editor.hideCursorInOverviewRuler": false,
  "editor.insertSpaces": true,
  "editor.lineHeight": 0,
  "editor.matchBrackets": true,
  "editor.minimap.showSlider": "always",
  "editor.overviewRulerBorder": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.codeActionsOnSave": {},
  "editor.tokenColorCustomizations": {},
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },

  // Emmet
  "emmet.includeLanguages": {
    "edge": "html",
    "javascript": "javascriptreact"
  },

  // ESLint
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.options": {
    "extends": ["eslint:recomended"],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "no-console": "off",
      "import/newline-after-import": "on",
      "no-unused-vars": "off",
      "max-len": "off"
    }
  },

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Extensions
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,

  // Files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.html": "html"
  },
  "files.autoSave": "off",
  "files.exclude": {
    "*.class": true
  },

  // Git
  "git.autofetch": true,
  "git.ignoreMissingGitWarning": true,
  "git.enableSmartCommit": true,

  // GitLens
  "gitlens.codeLens.enabled": false,
  "gitlens.defaultDateFormat": "MMMM Do YYYY, h:mma",
  "gitlens.defaultDateShortFormat": "MM/DD/YY, H:ma",
  "gitlens.hovers.annotations.over": "annotation",
  "gitlens.settings.mode": "advanced",
  "gitlens.blame.highlight.locations": ["line", "overview", "gutter"],
  "gitlens.recentChanges.highlight.locations": ["line", "overview", "gutter"],

  // HTML
  "html.autoClosingTags": true,
  "html.format.enable": true,
  "html.format.extraLiners": "head, body, /html",
  "html.format.wrapLineLength": 80,
  "html.suggest.html5": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,

  // Java
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.format.comments.enabled": false,
  "java.format.enabled": true,
  "java.format.settings.profile": "Eclipse [Formatter]",
  "java.format.settings.url": "https://gist.githubusercontent.com/mikozera/aa263771cdc499d2f306ff2c6defabf2/raw/ccfbf0134e04be4806cd3031982db1e78403a789/formatter.xml",
  "java.home": "D:\\Program Files\\Java\\jdk1.8.0_191",
  "java.saveActions.organizeImports": false,

  // JavaScript
  "javascript.format.enable": true,
  "javascript.validate.enable": false,

  // Live-Server
  "liveServer.settings.ChromeDebuggingAttachment": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.host": "127.0.0.1",
  "liveServer.settings.port": 5500,
  "liveServer.settings.https": {
    "enable": false,
    "cert": "",
    "key": "",
    "passphrase": ""
  },
  "liveServer.settings.proxy": {
    "enable": false,
    "baseUri": "/",
    "proxyUri": "http://127.0.0.1:80"
  },

  // Markdown
  "markdown.extension.toc.githubCompatibility": true,
  "markdown.extension.toc.updateOnSave": true,
  "markdownlint.config": {
    "MD013": false,
    "MD032": false,
    "MD030": false
  },

  // Prettier
  "prettier.eslintIntegration": true,
  "prettier.printWidth": 80,
  "prettier.requireConfig": false,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.stylelintIntegration": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "none",
  "prettier.tslintIntegration": false,
  "prettier.useTabs": false,
  "prettier.disableLanguages": ["vue"],

  // Python
  "python.formatting.provider": "autopep8",
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": true,

  // Shell Launcher
  "shellLauncher.shells.windows": [
    {
      "shell": "C:\\Program Files\\Git\\bin\\bash.exe",
      "label": "GitBash"
    },
    {
      "shell": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "label": "PowerShell"
    },
    {
      "shell": "C:\\WINDOWS\\System32\\cmd.exe",
      "label": "cmd"
    }
  ],

  // Sync
  "sync.autoDownload": true,
  "sync.autoUpload": true,
  "sync.gist": "63f8c02c4825d6620d6dbabd7ce0b09d",
  "sync.quietSync": true,

  // Terminal
  "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",

  // Window (default: 0.12)
  "window.zoomLevel": 0.12,

  // Workbench
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Atom One Dark",
  "workbench.commandPalette.history": 50,
  "workbench.editor.enablePreview": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",

  // Zenmode
  "zenMode.hideTabs": false
}
