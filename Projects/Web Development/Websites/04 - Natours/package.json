{
    "name": "natours",
    "version": "1.0.0",
    "description": "Natours website landing page!",
    "main": "index.js",
    "scripts": {
        "watch:sass": "node-sass sass/style.scss css/style.css -w",
        "devServer": "live-server",
        "start": "npm-run-all --parallel devServer watch:sass",
        "compile:sass": "node-sass sass/style.scss css/style.comp.css",
        "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer css/style.concat.css -b \"last 10 versions\"  -o css/style.prefix.css",
        "compress:css": "node-sass css/style.prefix.css css/style.min.css --output-style compressed",
        "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
    },
    "author": "mikozin",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^9.4.7",
        "concat": "^1.0.3",
        "live-server": "^1.2.1",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.1.1"
    }
}

"dev:server": "live-server",
    "watch:sass": "node-sass sass/style.scss css/style.css -w",
    "compile:sass": "node-sass sass/style.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss css/style.concat.css --use autoprefixer -b \"last 10 versions\" -o css/style.css",
    "start": "npm-run-all --parallel dev:server watch:sass",
    "build": "npm-run-all compile:sass concat:css prefix:css"
